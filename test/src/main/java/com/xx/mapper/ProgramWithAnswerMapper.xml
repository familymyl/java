<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xx.mapper.ProgramWithAnswerMapper">
  	<!-- 用来解决查询结果列与实体属性不一致的问题 -->
  	<resultMap type="com.xx.entity.ProgramWithAnswer" id="programWithAnswerResultMap">
  		<id property="id"  column="id"/>
  		<result property="answer" column="answer"/>
  		<association property="question" column="question_id" javaType="com.xx.entity.Question">
  			<id property="id" column="question_id"/>
  			
  		</association>
  	</resultMap>
</mapper>
